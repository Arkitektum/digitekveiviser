
@{
    ViewBag.Title = "brann resultat";
}

<div id="vue-brann-results">
    <div class="wizard-container">
        <main v-if="dmnNames && dmnRules" class="wizard-schema">
            <h1 class="wizard-schema-title">Resultat</h1>
            <div v-for="(categoryFields, categoryName) in resultData" class="wizard-schema-section">
                <h2><span>{{ getChapter(categoryName) }}</span> {{ getTableName(categoryName) }}</h2>
                <div v-for="(fieldValue, fieldName) in categoryFields">
                    <div v-if="getCallName(fieldName) !== 'Referanse forskrift'" class="wizard-result-rule">
                        <div class="wizard-result-rule-value">
                            <b>{{ getCallName(fieldName) }}: </b>{{ fieldValue }}
                        </div>
                        <div class="wizard-result-rule-description" v-if="getDescription(fieldName)">
                            {{ getDescription(fieldName) }}
                        </div>
                        <div v-if="getCallName(fieldName) && getDescriptionUrl(fieldName)">
                            <a v-bind:href="getDescriptionUrl(fieldName)">Les mer om {{ getCallName(fieldName) }}</a>
                        </div>
                        <div v-else-if="getDescriptionUrl(fieldName)">
                            <a v-bind:href="getDescriptionUrl(fieldName)">Les mer</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>


@section scripts{
    <script src="/Scripts/brannResults.js"></script>
}