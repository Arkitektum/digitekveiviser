            <input type="radio" v-model="variables.beregnetForOvernatting.value" name="beregnetForOvernatting" id="beregnetForOvernatting-false" value="false" />
            <label class="radio" for="beregnetForOvernatting-false">Nei</label>
        </div>
    </div>
</div>

<div v-show="hvilkeVirksomhetstype == 'false'" class="wizard-schema-section">
    <!-- Multiple Radios -->
    <div class="control-group">
        <label class="control-label" for="liteBrannfarligAktivitet">Bruk medfører liten brannfare?</label>
        <p>Forutsatt bruk av bygg medfører liten brannfare</p>
        <div class="controls">
            <input type="radio" v-model="variables.liteBrannfarligAktivitet.value" name="liteBrannfarligAktivitet" id="liteBrannfarligAktivitet-null" value="" checked="checked" />
            <label class="radio" for="liteBrannfarligAktivitet-null">Vet ikke</label>

            <input type="radio" v-model="variables.liteBrannfarligAktivitet.value" name="liteBrannfarligAktivitet" id="liteBrannfarligAktivitet-true" value="true" />
            <label class="radio" for="liteBrannfarligAktivitet-true">Ja</label>

            <input type="radio" v-model="variables.liteBrannfarligAktivitet.value" name="liteBrannfarligAktivitet" id="liteBrannfarligAktivitet-false" value="false" />
            <label class="radio" for="liteBrannfarligAktivitet-false">Nei</label>
        </div>
    </div>
</div>
